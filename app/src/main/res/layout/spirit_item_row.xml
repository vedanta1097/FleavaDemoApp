<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="40dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="0.0px"
        android:clipToPadding="false"
        android:clipChildren="false"
        card_view:cardElevation="8dp"
        card_view:cardCornerRadius="0dp"
        card_view:cardPreventCornerOverlap="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/spirit_imageview"
                android:layout_width="fill_parent"
                android:layout_height="180dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:src="@drawable/card1" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_img"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/profilepic"
                android:layout_marginStart="12dp"
                android:layout_marginTop="170dp"
                android:elevation="6dp"/>

            <ImageButton
                android:id="@+id/document_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/circle_document_btn"
                android:src="@drawable/ic_document"
                android:padding="6dp"
                android:scaleType="fitCenter"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="190dp"
                android:elevation="6dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/spirit_imageview"
                android:orientation="vertical"
                android:layout_marginStart="80dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="14dp">

                <TextView
                    android:id="@+id/spirit_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="meditation"
                    android:textAllCaps="true"
                    android:textColor="@color/colorTextGray"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:fontFamily="@font/proximanova_regular"/>

                <TextView
                    android:id="@+id/spirit_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Erronous beliefs about life, people, and oneself"
                    android:textColor="@color/colorTextBlack"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:fontFamily="@font/proximanova_semibold"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="By"
                        android:textColor="@color/colorTextGray"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:fontFamily="@font/proximanova_regular"/>

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="4dp"
                        android:text="Michelle Banks"
                        android:textColor="@color/colorTextGray"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:fontFamily="@font/proximanova_bold"/>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>